{
  "name": "romper",
  "version": "0.0.1",
  "description": "Object Based Media player",
  "main": "dist/romper.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "browserify -o dist/romper.js -t babelify -e src/romper.js",
    "pretest": "flow-typed install",
    "test": "concurrently \"node_modules/.bin/mochify --transform babelify --recursive spec\" \"eslint src/ spec/\" \"flow check --all\"",
    "prewatch": "flow-typed install",
    "watch": "concurrently \"watchify -o dist/romper.js -t babelify -e src/romper.js --debug\" \"node_modules/.bin/mochify --transform babelify --watch --recursive spec\" \"nodemon --watch src --watch spec --exec node_modules/.bin/eslint src/ spec/\" \"nodemon --watch src --watch spec --exec 'node_modules/.bin/flow check --all || exit 1'\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/romper.git"
  },
  "author": "BBC R&D",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/bbc/romper/issues"
  },
  "homepage": "https://github.com/bbc/romper#readme",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": ">=10 <15",
    "chai": "^3.5.0",
    "concurrently": "^3.4.0",
    "eslint": "^3.17.1",
    "eslint-plugin-flowtype": "^2.30.3",
    "flow-bin": "^0.41.0",
    "flow-typed": "^2.0.0",
    "mochify": "^3.1.0",
    "nodemon": "^1.11.0",
    "sinon": "^2.0.0",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "json-logic-js": "^1.0.11"
  }
}
